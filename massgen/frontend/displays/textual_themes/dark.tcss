/* Dark theme for Textual Terminal Display
 * Professional, modern color palette with subtle accents
 * Inspired by VSCode Dark+ with refined touches
 *
 * Uses semantic CSS variables for easy theme customization.
 * See _variables.tcss for the complete variable reference.
 */

/* =============================================================================
 * CSS Variables - GitHub Dark+ Inspired Palette
 * =============================================================================
 * To switch themes, change these variable values.
 * For Catppuccin Mocha, see _catppuccin_mocha.tcss for reference values.
 */

/* Background Colors */
$bg-base: #0d1117;
$bg-surface: #161b22;
$bg-surface-2: #21262d;
$bg-surface-3: #30363d;

/* Foreground/Text Colors */
$fg-primary: #e6edf3;
$fg-muted: #8b949e;
$fg-subtle: #6e7681;
$fg-on-accent: #ffffff;

/* Border Colors */
$border-default: #30363d;
$border-highlight: #484f58;
$border-muted: #21262d;

/* Semantic Accent Colors */
$accent-primary: #58a6ff;
$accent-success: #3fb950;
$accent-warning: #d29922;
$accent-error: #f85149;
$accent-info: #39c5cf;
$accent-special: #a371f7;

/* Agent Colors - for distinguishing agents */
$agent-1: #58a6ff;
$agent-1-bg: #0d1a26;
$agent-2: #3fb950;
$agent-2-bg: #0d1f14;
$agent-3: #a371f7;
$agent-3-bg: #1a0d26;
$agent-4: #f0883e;
$agent-4-bg: #261a0d;
$agent-5: #39c5cf;
$agent-5-bg: #0d1f1f;
$agent-6: #db61a2;
$agent-6-bg: #260d1a;
$agent-7: #d29922;
$agent-7-bg: #262010;
$agent-8: #f85149;
$agent-8-bg: #26100d;

/* =============================================================================
 * Base Styles
 * =============================================================================
 */

Screen {
    background: $bg-base;
    color: $fg-primary;
    layers: base overlay;
}

.hidden {
    display: none;
}

/* === Welcome Screen === */
#welcome_screen {
    width: 100%;
    height: 1fr;
    align: center middle;
    background: $bg-base;
}

#welcome_screen Label, #welcome_screen Static {
    width: auto;
    text-align: center;
}

#welcome_logo {
    color: $accent-primary;
    text-style: bold;
}

#welcome_tagline {
    color: $accent-success;
    text-style: bold;
    margin-top: 2;
}

#welcome_workflow {
    color: $fg-muted;
    margin-top: 1;
}

#welcome_agents {
    color: $fg-muted;
    margin-top: 1;
}

#welcome_hint {
    color: $accent-primary;
    text-style: italic;
    margin-top: 2;
}

#welcome_shortcuts_hint {
    color: $fg-muted;
    text-style: italic;
    margin-top: 1;
}

#cwd_hint {
    color: $fg-muted;
    text-style: italic;
    margin-top: 1;
}

#main_container {
    layout: vertical;
    background: $bg-base;
    height: 1fr;
    padding: 0;
}

#agents_container {
    layout: vertical;
    width: 100%;
    height: 100%;
}

/* === Swimlane Mode === */
/* When .swimlane is added to #agents_container, show agents side-by-side */
#agents_container.swimlane {
    layout: horizontal;
    overflow-x: auto;
}

#agents_container.swimlane AgentPanel {
    width: 1fr;
    min-width: 40;
    max-width: 100;
    height: 100%;
    border-right: solid $border-default;
    display: block;
}

#agents_container.swimlane AgentPanel:last-of-type {
    border-right: none;
}

/* In swimlane mode, show all agents (remove hidden) */
#agents_container.swimlane AgentPanel.hidden {
    display: block;
}

/* Swimlane agent header - more compact */
#agents_container.swimlane AgentPanel > Vertical > Label:first-of-type {
    height: 2;
    padding: 0 1;
    background: $bg-surface;
    border-bottom: solid $border-default;
}

/* === Agent Tab Bar === */
/* NOTE: No dock: top - flows naturally below HeaderWidget */
AgentTabBar {
    height: 3;
    width: 100%;
    layout: horizontal;
    background: $bg-surface;
    border-bottom: solid $border-default;
    padding: 0 1;
}

AgentTab {
    width: auto;
    height: 3;
    padding: 0 2;
    margin: 0 1;
    content-align: center middle;
    border: solid $border-default;
    background: transparent;
}

AgentTab:hover {
    background: $bg-surface-2;
    border: solid $border-highlight;
}

AgentTab.active {
    background: $bg-surface-2;
    color: $fg-primary;
    border: solid $accent-primary;
    border-bottom: tall $accent-primary;
}

AgentTab.inactive {
    background: transparent;
    border: dashed $border-default;
    color: $fg-muted;
}

AgentTab.inactive:hover {
    border: dashed $border-highlight;
    color: $fg-primary;
}

/* === Agent Color Palette - Each agent gets a unique accent color === */
/* Color 1: Blue (default) */
AgentTab.agent-color-1 { border-left: thick $agent-1; }
AgentTab.agent-color-1.active { border-left: thick $agent-1; background: $agent-1-bg; }

/* Color 2: Green */
AgentTab.agent-color-2 { border-left: thick $agent-2; }
AgentTab.agent-color-2.active { border-left: thick $agent-2; background: $agent-2-bg; }

/* Color 3: Purple */
AgentTab.agent-color-3 { border-left: thick $agent-3; }
AgentTab.agent-color-3.active { border-left: thick $agent-3; background: $agent-3-bg; }

/* Color 4: Orange */
AgentTab.agent-color-4 { border-left: thick $agent-4; }
AgentTab.agent-color-4.active { border-left: thick $agent-4; background: $agent-4-bg; }

/* Color 5: Cyan */
AgentTab.agent-color-5 { border-left: thick $agent-5; }
AgentTab.agent-color-5.active { border-left: thick $agent-5; background: $agent-5-bg; }

/* Color 6: Pink */
AgentTab.agent-color-6 { border-left: thick $agent-6; }
AgentTab.agent-color-6.active { border-left: thick $agent-6; background: $agent-6-bg; }

/* Color 7: Yellow */
AgentTab.agent-color-7 { border-left: thick $agent-7; }
AgentTab.agent-color-7.active { border-left: thick $agent-7; background: $agent-7-bg; }

/* Color 8: Red */
AgentTab.agent-color-8 { border-left: thick $agent-8; }
AgentTab.agent-color-8.active { border-left: thick $agent-8; background: $agent-8-bg; }

/* Tab status colors */
AgentTab.status-waiting {
    border-bottom: solid $fg-muted;
}

AgentTab.status-working {
    border-bottom: solid $accent-primary;
}

AgentTab.status-streaming {
    border-bottom: solid $accent-success;
}

AgentTab.status-completed {
    border-bottom: solid $accent-success;
}

AgentTab.status-error {
    border-bottom: solid $accent-error;
}

/* Active tab with status - subtle background tint */
AgentTab.active.status-working {
    background: $bg-surface;
    border: solid $accent-primary;
}

AgentTab.active.status-streaming {
    background: $agent-2-bg;
    border: solid $accent-success;
}

AgentTab.active.status-completed {
    background: $agent-2-bg;
    border: solid $accent-success;
}

AgentTab.active.status-error {
    background: $agent-8-bg;
    border: solid $accent-error;
}

/* Winner tab styling */
AgentTab.status-winner {
    background: #3d3510;
    border: solid #dcdcaa;
    color: #dcdcaa;
    text-style: bold;
    border-bottom: tall #dcdcaa;
}

AgentTab.status-winner.active {
    background: #4d4520;
    border: solid #dcdcaa;
    border-bottom: tall #dcdcaa;
}

/* Dimmed tabs (non-winner during final presentation) */
AgentTab.dimmed {
    opacity: 0.6;
}

/* Disabled tabs (single-agent mode - unselected agents) */
AgentTab.disabled {
    background: $bg-base;
    border: dashed $bg-surface-2;
    color: $border-highlight;
    text-style: italic;
    opacity: 0.7;
}

AgentTab.disabled:hover {
    background: $bg-surface;
    border: dashed $border-default;
    color: $fg-muted;
    /* Clicking disabled tab selects it as new single agent */
}

/* === Mode Bar (above input) === */
#mode_bar {
    height: 2;
    width: 100%;
    layout: horizontal;
    background: $bg-surface;
    border-bottom: solid $border-default;
    padding: 0 1;
    align: left middle;
}

#mode_bar.hidden {
    display: none;
}

/* Mode Toggle buttons */
ModeToggle {
    width: auto;
    height: auto;
    margin: 0 1;
    padding: 0 1;
    background: $bg-surface-2;
    color: $fg-muted;
    border: none;
}

ModeToggle:hover {
    background: $border-default;
    color: $fg-primary;
}

ModeToggle.disabled {
    background: $bg-surface;
    color: $border-highlight;
    text-style: italic;
}

/* Plan mode states */
ModeToggle.state-plan {
    background: #0d3a0d;
    color: $accent-success;
}

ModeToggle.state-execute {
    background: #0d3a0d;
    color: $accent-success;
    text-style: bold;
}

/* Agent mode states */
ModeToggle.state-single {
    background: #3d2a0d;
    color: $accent-warning;
}

/* Refinement mode states */
ModeToggle.state-off {
    background: #3d0d0d;
    color: $accent-error;
}

/* Override button in mode bar */
#override_btn {
    background: #3d2a0d;
    color: $accent-warning;
    margin-left: 1;
}

#override_btn:hover {
    background: #4d3a1d;
}

#override_btn.hidden {
    display: none;
}

/* Plan info display */
#plan_info {
    color: $accent-success;
    margin-left: 1;
}

/* Mode spacer (pushes override button right) */
#mode_spacer {
    width: 1fr;
}

/* Consensus reached animation on StatusBar */
StatusBar.consensus-reached {
    background: #3d3510;
    border-top: solid #dcdcaa;
}

/* Orchestrator events modal */
#orchestrator_modal_container {
    background: $bg-surface;
    border: solid $border-default;
    padding: 2;
    width: 80%;
    height: 80%;
}

#orchestrator_modal_header {
    color: $fg-primary;
    text-style: bold;
    margin-bottom: 1;
}

#orchestrator_hint {
    color: $fg-muted;
    text-style: italic;
    margin-bottom: 1;
}

#orchestrator_events_content {
    background: $bg-base;
    color: $fg-primary;
}

/* Agent panels - now full width, one at a time */
AgentPanel {
    background: $bg-surface;
    border-left: solid $border-default;
    border-top: solid $border-default;
    border-bottom: solid $border-default;
    border-right: none;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;  /* Disable scrolling on AgentPanel - scrolling happens in TimelineScrollContainer */
}

/* Vertical container inside AgentPanel - full width, full height */
AgentPanel > Vertical {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    overflow: hidden;  /* Scrolling happens in TimelineScrollContainer, not here */
}

/* Agent panel header label - first line with agent name, backend, timer */
AgentPanel > Vertical > Label:first-of-type {
    padding-left: 2;
}

AgentPanel.hidden {
    display: none;
}

AgentPanel:hover {
    border-left: solid $border-highlight;
    border-top: solid $border-highlight;
    border-bottom: solid $border-highlight;
    border-right: none;
}

/* Override Textual's default purple focus outline */
AgentPanel:focus,
AgentPanel:focus-within {
    border-left: solid $accent-primary;
    border-top: solid $accent-primary;
    border-bottom: solid $accent-primary;
    border-right: none;
    background: $bg-surface;
    outline: none;
}

AgentPanel.status-waiting {
    border-left: solid $border-default;
    border-top: solid $border-default;
    border-bottom: solid $border-default;
    border-right: none;
}

AgentPanel.status-working {
    border-left: thick $accent-primary;
    border-right: none;
    background: $bg-surface;
}

AgentPanel.status-streaming {
    border-left: thick $accent-success;
    border-right: none;
    background: $bg-base;
}

AgentPanel.status-completed {
    border-left: thick $accent-success;
    border-right: none;
}

AgentPanel.status-error {
    border-left: thick $accent-error;
    border-right: none;
    background: #1a0f0f;
}

/* Dimmed panel (non-winner during final presentation) */
AgentPanel.dimmed-panel {
    opacity: 0.6;
}

/* === Agent Panel Color Palette - Match tab colors === */
AgentPanel.agent-color-1 { border-left: thick $accent-primary; border-right: none; }
AgentPanel.agent-color-2 { border-left: thick $accent-success; border-right: none; }
AgentPanel.agent-color-3 { border-left: thick $accent-special; border-right: none; }
AgentPanel.agent-color-4 { border-left: thick $agent-4; border-right: none; }
AgentPanel.agent-color-5 { border-left: thick $accent-info; border-right: none; }
AgentPanel.agent-color-6 { border-left: thick $agent-6; border-right: none; }
AgentPanel.agent-color-7 { border-left: thick $accent-warning; border-right: none; }
AgentPanel.agent-color-8 { border-left: thick $accent-error; border-right: none; }

/* Agent header row - horizontal layout for left/right content */
.agent-header-row {
    width: 100%;
    height: auto;
    layout: horizontal;
    padding: 0 1;
}

.agent-header-left {
    width: 1fr;
    height: auto;
}

.agent-header-right {
    width: auto;
    height: auto;
    text-align: right;
    color: $accent-special;
}

/* Header badges - clickable indicators for bg tasks and task plan */
.agent-header-badge {
    width: auto;
    height: auto;
    padding: 0 1;
    margin-left: 1;
    border: solid $border-default;
    background: $bg-surface;
}

.agent-header-badge:hover {
    background: $bg-surface-2;
    border: solid $fg-muted;
}

.agent-header-badge.hidden {
    display: none;
}

/* Background tasks badge - amber/orange theme */
.header-badge-bg {
    color: $accent-warning;
    border: solid $accent-warning 30%;
}

.header-badge-bg:hover {
    border: solid $accent-warning;
    background: #2d2510;
}

/* Task plan badge - purple theme */
.header-badge-tasks {
    color: $accent-special;
    border: solid $accent-special 30%;
}

.header-badge-tasks:hover {
    border: solid $accent-special;
    background: #1a1528;
}

/* Loading indicator - centered in panel */
.loading-container {
    width: 100%;
    height: 100%;
    min-height: 5;
    align: center middle;
    content-align: center middle;
    background: $bg-base;
}

.loading-container.hidden {
    display: none;
}

.loading-container ProgressIndicator {
    text-align: center;
    color: $accent-primary;
    text-style: bold;
    width: 100%;
    height: auto;
    content-align: center middle;
}

.loading-text {
    text-align: center;
    color: $fg-muted;
    text-style: italic;
}

/* "Not in use" overlay for single-agent mode */
.not-in-use-overlay {
    width: 100%;
    height: 100%;
    min-height: 5;
    align: center middle;
    content-align: center middle;
    background: #0d111780;
    layer: overlay;
}

.not-in-use-overlay.hidden {
    display: none;
}

.not-in-use-label {
    text-align: center;
    color: $fg-muted;
    text-style: bold;
    width: 100%;
    height: auto;
    content-align: center middle;
}

.not-in-use-sublabel {
    text-align: center;
    color: $border-highlight;
    text-style: italic;
    width: 100%;
    height: auto;
    content-align: center middle;
}

/* Context label - shows which answers an agent has in context */
.context-label {
    height: 1;
    width: 100%;
    padding: 0 1 0 3;
    background: #1c2128;
    color: #7ee787;
    text-style: italic;
}

.context-label.hidden {
    display: none;
}

/* Task Plan Toggle - Shows task plan status in agent header */
.task-plan-toggle {
    height: 1;
    width: 100%;
    padding: 0 1 0 3;
    background: #1a1f2e;
    color: $accent-special;
    text-style: bold;
}

.task-plan-toggle:hover {
    background: #242b3d;
    color: #c9b2fa;
}

.task-plan-toggle.hidden {
    display: none;
}

/* Compact Header - Shows question and turn info */
HeaderWidget {
    dock: top;
    height: auto;
    width: 100%;
    padding: 0 1;
    background: $bg-base;
    color: $fg-muted;
    border-bottom: solid $border-default;
}

HeaderWidget.hidden {
    display: none;
}

/* Input area container - docks to bottom */
#input_area {
    dock: bottom;
    height: auto;
    min-height: 4;
    width: 100%;
    padding: 0 1;
    background: $bg-base;
}

/* Execution bar - hidden (keeping input area consistent in all states) */
#execution_bar {
    display: none;
}

#execution_status {
    height: 1;
    width: auto;
    padding: 0 2;
    color: $fg-muted;
    content-align: left middle;
    background: $bg-surface-2;
    margin-left: 1;
}

#execution_spacer {
    width: 1fr;
}

#cancel_button {
    width: auto;
    min-width: 10;
    height: 1;
    background: #b62324;
    color: #ffffff;
    border: none;
    padding: 0 2;
    text-style: bold;
}

#cancel_button:hover {
    background: #da3633;
    color: #ffffff;
}

#cancel_button:focus {
    background: #da3633;
    border: none;
}

/* === Path Autocomplete Dropdown === */
#path_dropdown {
    display: none;
    layer: overlay;
    dock: bottom;
    width: 100%;
    height: auto;
    max-height: 12;
    background: $bg-surface-2;
    border: solid $accent-primary;
    padding: 0;
    margin-bottom: 7;
    layout: vertical;
}

#path_dropdown.visible {
    display: block;
}

#path_dropdown > #suggestions_container {
    height: auto;
    max-height: 8;
    overflow-y: auto;
}

#path_dropdown > .hint-bar {
    dock: bottom;
    height: 2;
    width: 100%;
    background: $border-default;
    color: $fg-primary;
    text-align: center;
    padding: 0 1;
    border-top: solid $accent-primary;
}

/* Path suggestion rows */
SuggestionRow {
    height: 1;
    padding: 0 1;
    background: transparent;
}

SuggestionRow:hover {
    background: $border-default;
}

SuggestionRow.selected {
    background: $accent-primary;
    color: $bg-base;
}

/* Question input - multi-line TextArea */
#question_input {
    background: $bg-surface;
    border: solid $border-default;
    height: auto;
    min-height: 1;
    max-height: 10;
    margin-left: 1;
}

#question_input:focus {
    border: solid $accent-primary;
}

/* Hide line numbers in the question input */
#question_input .text-area--line-number-gutter {
    display: none;
}

/* Input header - contains hint, vim indicator, and cancel button */
#input_header {
    layout: horizontal;
    height: 1;
    width: 100%;
    margin-bottom: 0;
}

/* Input hint text */
#input_hint {
    height: 1;
    width: 1fr;
    color: $fg-subtle;
    text-style: italic;
    padding: 0 1;
    margin-left: 1;
}

/* Vim mode indicator - hidden by default */
#vim_indicator {
    display: none;
    height: 1;
    width: auto;
    min-width: 10;
}

/* Vim mode indicator - shown when active (use !important to override display: none) */
#input_header #vim_indicator.vim-normal-indicator {
    display: block !important;
    height: 1;
    width: 10;
    padding: 0 1;
    text-style: bold;
    content-align: center middle;
    background: $accent-warning;
    color: $bg-base;
}

#input_header #vim_indicator.vim-insert-indicator {
    display: block !important;
    height: 1;
    width: 10;
    padding: 0 1;
    text-style: bold;
    content-align: center middle;
    background: #238636;
    color: #ffffff;
}

/* Vim normal mode - input border */
#question_input.vim-normal {
    border: solid $accent-warning;
}

#question_input.vim-normal:focus {
    border: solid $accent-warning;
}

#restart_banner {
    background: $bg-surface-2;
    color: $accent-warning;
    padding: 1;
    margin-top: 1;
    border: solid $border-highlight;
}

#restart_context {
    background: $bg-surface;
    color: $fg-primary;
    padding: 1;
    border: solid $border-default;
}

Label {
    height: auto;
    width: 100%;
}

RichLog {
    background: $bg-base;
    color: $fg-primary;
    scrollbar-size: 2 2;
}

/* Status colors */
.waiting {
    color: $fg-muted;
}

.working {
    color: $accent-primary;
}

.streaming {
    color: $accent-success;
}

.completed {
    color: $accent-success;
}

.error {
    color: $accent-error;
}

/* Content type colors */
.tool {
    color: #79c0ff;
}

.status {
    color: $accent-warning;
}

.thinking {
    color: $fg-primary;
}

.injection {
    color: #d2a8ff;
    background: #2d2d4a;
    padding: 0 1;
    margin: 1 0;
}

.reminder {
    color: #f9c74f;
    background: #4a3d2d;
    padding: 0 1;
    margin: 1 0;
}

.presentation {
    color: $accent-special;
}

/* Streaming label */
.streaming_label {
    color: $accent-success;
    text-style: italic bold;
    height: 1;
    width: 100%;
    background: $agent-2-bg;
    border-left: tall $accent-success;
    padding-left: 1;
}

/* Post-evaluation panel */
#post_eval_container {
    background: #252526;
    border: solid #5a5a5a;
    margin: 0 1 1 1;
    padding: 1;
    width: 100%;
}

#post_eval_label {
    color: #9cdcfe;
    margin-bottom: 1;
}

/* Final stream panel - layout: fixed header, scrollable content, fixed footer */
#final_stream_container {
    background: #2d2d25;
    border: solid #dcdcaa;
    margin: 0 1 1 1;
    padding: 0;
    width: 100%;
    height: 100%;
    layout: vertical;
}

#final_stream_container.streaming-active {
    border: double #dcdcaa;
}

/* Fixed header section */
#final_stream_header {
    height: auto;
    padding: 1;
    background: #2d2d25;
    border-bottom: solid #dcdcaa 50%;
}

#final_stream_label {
    color: #dcdcaa;
    text-style: bold;
}

/* Scrollable content area - takes remaining space */
#final_stream_content {
    height: 1fr;
    padding: 1;
    background: #1e1e1e;
}

#final_stream_log {
    background: #1e1e1e;
    color: #d4d4d4;
    height: auto;
}

#final_stream_log,
#post_eval_log {
    scrollbar-size: 2 2;
}

/* Fixed footer section */
#final_stream_footer {
    height: auto;
    padding: 1;
    background: $bg-surface-2;
    border-top: solid $border-default;
}

#final_stream_footer.hidden {
