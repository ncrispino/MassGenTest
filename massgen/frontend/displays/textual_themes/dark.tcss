    text-style: bold;
    border: solid $accent-primary;
    outline: none;
}

Button.-primary {
    background: #238636;
    border: solid #238636;
}

Button.-primary:hover {
    background: #2ea043;
    border: solid #2ea043;
}

/* Lists */
ListView {
    background: $bg-base;
    color: $fg-primary;
    height: auto;
    max-height: 20;
    scrollbar-size: 2 2;
}

ListItem {
    background: transparent;
    padding: 0 1;
}

ListItem:hover {
