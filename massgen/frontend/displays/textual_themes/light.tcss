/* Metrics Modal */
#metrics_container {
    background: #f3f3f3;
    border: thick #af00db;
    padding: 2;
    width: 90%;
    height: 70%;
}

#metrics_header {
    color: #af00db;
    text-style: bold;
    margin-bottom: 1;
}

#metrics_content {
    background: #ffffff;
