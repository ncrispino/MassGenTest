}

ToolCallCard.type-code {
    border-left: tall #ff9800;
}

ToolCallCard.type-database {
    border-left: tall #9c27b0;
}

ToolCallCard.type-git {
    border-left: tall #f44336;
}

ToolCallCard.type-api {
    border-left: tall #795548;
}

ToolCallCard.type-ai {
    border-left: tall #00bcd4;
}

ToolCallCard.type-memory {
    border-left: tall #8bc34a;
}

ToolCallCard.type-workspace {
    border-left: tall #2196f3;
}

/* === Content Sections === */

/* Tool Section - fixed size collapsible box for tool cards */
ToolSection {
    height: auto;
    max-height: 40%;
    margin: 0 0 1 0;
    padding: 0;
    border: round #dddddd;
    background: #f9f9f9;
}

ToolSection.collapsed {
    height: 3;
    overflow: hidden;
}

ToolSection.hidden {
    display: none;
}

ToolSection #tool_section_header {
    height: 1;
    width: 100%;
    padding: 0 1;
    background: #e8e8e8;
    color: #0066cc;
}

ToolSection #tool_section_header:hover {
    background: #dddddd;
}

ToolSection #tool_container {
    height: auto;
    max-height: 100%;
    padding: 0;
    background: #ffffff;
    overflow-y: auto;
}

/* Timeline Section - chronological view of all content */
TimelineSection {
    height: 1fr;
    padding: 0;
    margin: 0;
}

TimelineSection #timeline_container {
    height: 1fr;
    padding: 0 1;
    background: #ffffff;
    overflow-y: auto;
}

/* Hide legacy RichLog in AgentPanel - using TimelineSection now */
AgentPanel RichLog {
    display: none;
}

AgentPanel .streaming_label {
    display: none;
}

TimelineSection .timeline-text {
    width: 100%;
    padding: 0 0 1 0;
}

TimelineSection .timeline-text.status {
    color: #2196f3;
}

TimelineSection .timeline-text.thinking {
    color: #888888;
}

TimelineSection .timeline-text.response {
    color: #4caf50;
}

/* Restart Banner - prominent separator for session restarts */
RestartBanner {
    width: 100%;
    height: auto;
    margin: 2 0;
    padding: 0;
    text-align: center;
}

/* Thinking Section - auto height, shrinks to content */
ThinkingSection {
    height: auto;
    max-height: 50%;
    padding: 0;
}

ThinkingSection #thinking_log {
    height: auto;
    max-height: 100%;
    padding: 0 1;
    background: #ffffff;
    color: #555555;
}

/* Status Badge - compact inline indicator */
StatusBadge {
    width: auto;
    height: 1;
    padding: 0 1;
    text-align: right;
}

StatusBadge.status-connected {
    color: #4caf50;
}

StatusBadge.status-working {
    color: #ff9800;
}

StatusBadge.status-streaming {
    color: #2196f3;
}

StatusBadge.status-completed {
    color: #4caf50;
}

StatusBadge.status-error {
    color: #f44336;
}

StatusBadge.status-waiting {
    color: #999999;
}

/* Completion Footer - subtle completion line */
CompletionFooter {
    height: 1;
    width: 100%;
    padding: 0 1;
    text-align: center;
    dock: bottom;
}

CompletionFooter.hidden {
    display: none;
}

CompletionFooter.status-completed {
    color: #4caf50;
}

CompletionFooter.status-error {
    color: #f44336;
}

/* === Status Bar === */
StatusBar {
    dock: bottom;
    height: 1;
    background: #f0f0f0;
    color: #333333;
    padding: 0 1;
    layout: horizontal;
    border-top: solid #0066cc;
}

StatusBar > Static {
    height: 1;
}

#status_phase {
    width: auto;
    color: #2196f3;
    margin-right: 2;
}

#status_progress {
    width: auto;
    color: #0066cc;
    margin-right: 2;
}

#status_votes {
    width: 1fr;
    color: #4caf50;
}

#status_events {
    width: auto;
    color: #ff9800;
    margin-right: 2;
}

#status_events.clickable:hover {
    color: #333333;
    text-style: underline;
}

#status_timer {
    width: auto;
    color: #ff9800;
}

/* Phase-specific border colors */
StatusBar.phase-idle {
    border-top: solid #999999;
}

StatusBar.phase-initial {
    border-top: solid #2196f3;
}

StatusBar.phase-enforcement {
    border-top: solid #4caf50;
}

StatusBar.phase-presentation {
    border-top: solid #ff9800;
}

/* === Vote Visualization Animations === */

/* Vote counter pulse animation when vote is cast */
#status_votes.vote-updated {
    text-style: bold;
    background: #4caf50 30%;
}

/* Highlight when vote leader changes */
#status_votes.leader-changed {
    background: #ff9800 30%;
    text-style: bold;
}

/* StatusBar celebration when consensus is reached */
StatusBar.consensus-reached {
    background: #e8f5e9;
    border-top: double #4caf50;
}

StatusBar.consensus-reached #status_votes {
    color: #2e7d32;
    text-style: bold;
}

