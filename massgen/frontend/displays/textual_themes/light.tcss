}

/* Muted/disabled states */
.state-muted {
    color: #999999;
    text-style: dim;
}

/* === Pulse Animations (Task 5.16) === */

/* Vote pulse - brief highlight */
.pulse-vote {
    background: #4caf50 20%;
    text-style: bold;
}

/* Leader change pulse */
.pulse-leader {
    background: #ff9800 20%;
    text-style: bold;
}

/* Winner celebration pulse */
.pulse-winner {
    background: #ffc107 30%;
    color: #333333;
    text-style: bold;
}

/* Completion flash */
.flash-complete {
    background: #4caf50;
    color: #ffffff;
}

/* === Action Button Types (Task 5.16) === */

Button.action-primary {
    background: #4caf50;
    border: solid #4caf50;
    color: #ffffff;
}

Button.action-primary:hover {
    background: #43a047;
    border: solid #43a047;
}

Button.action-danger {
    background: #f44336;
    border: solid #f44336;
    color: #ffffff;
}

Button.action-danger:hover {
    background: #e53935;
    border: solid #e53935;
}

Button.action-secondary {
    background: #e0e0e0;
    border: solid #bdbdbd;
    color: #333333;
}

Button.action-secondary:hover {
    background: #bdbdbd;
    border: solid #9e9e9e;
}

/* === Progress Indicator (Task 5.15) === */

ProgressIndicator {
    height: 1;
    width: auto;
    padding: 0 1;
    color: #666666;
}

ProgressIndicator.hidden {
    display: none;
}

/* === Final Stream Panel Enhancements (Task 5.12) === */

#final_stream_buttons {
    height: 3;
    margin-top: 1;
    layout: horizontal;
}

#final_stream_buttons Button {
    margin-right: 1;
    min-width: 14;
}

/* Final stream winner styling */
#final_stream_container.winner-complete {
    border: solid #4caf50;
    background: #e8f5e9;
}

#final_stream_container.winner-complete #final_stream_label {
    color: #2e7d32;
}

/* Follow-up input container in final stream panel */
#followup_container {
    height: auto;
    margin-top: 1;
    padding: 1;
    background: #f5f5f5;
    border-top: solid #cccccc;
}

#followup_container.hidden {
    display: none;
}

#followup_label {
    color: #666666;
    height: 1;
    margin-bottom: 1;
}

#followup_input {
    background: #ffffff;
    border: solid #cccccc;
}

#followup_input:focus {
    border: solid #0066cc;
}

/* Hidden input area class */
#input_area.hidden {
    display: none;
}
