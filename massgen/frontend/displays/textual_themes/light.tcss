/* Light theme for Textual Terminal Display */

Screen {
    background: #ffffff;
    color: #333333;
    layers: base overlay;
}

.hidden {
    display: none;
}

/* === Welcome Screen === */
#welcome_screen {
    width: 100%;
    height: 1fr;
    align: center middle;
    background: #ffffff;
}

#welcome_screen Label, #welcome_screen Static {
    width: auto;
    text-align: center;
}

#welcome_logo {
    color: #0066cc;
    text-style: bold;
}

#welcome_tagline {
    color: #4caf50;
    text-style: bold;
    margin-top: 2;
}

#welcome_agents {
    color: #666666;
    margin-top: 1;
}

#welcome_hint {
    color: #2196f3;
    text-style: italic;
    margin-top: 2;
}

#welcome_shortcuts_hint {
    color: #999999;
    text-style: italic;
    margin-top: 1;
}

#cwd_hint {
    color: #999999;
    text-style: italic;
    margin-top: 1;
}

#main_container {
    layout: vertical;
    background: #ffffff;
    height: 1fr;
    padding: 0;
}

#agents_container {
    layout: vertical;
    width: 100%;
    height: 100%;
}

/* === Agent Tab Bar === */
/* NOTE: No dock: top - flows naturally below HeaderWidget */
AgentTabBar {
    height: 3;
    width: 100%;
    layout: horizontal;
    background: #f5f5f5;
    border-bottom: solid #0066cc;
    padding: 0 1;
}

AgentTab {
    width: auto;
    height: 3;
    padding: 0 2;
    margin: 0 1;
    content-align: center middle;
    border: solid #dddddd;
}

AgentTab:hover {
    background: #e8e8e8;
}

AgentTab.active {
    background: #0066cc;
    color: #ffffff;
    border: solid #0066cc;
}

AgentTab.inactive {
    background: transparent;
    border: dashed #cccccc;
    color: #666666;
}

AgentTab.inactive:hover {
    border: dashed #999999;
    color: #333333;
}

/* === Agent Color Palette - Each agent gets a unique accent color === */
/* Color 1: Blue */
AgentTab.agent-color-1 { border-left: thick #2196f3; }
AgentTab.agent-color-1.active { border-left: thick #2196f3; background: #e3f2fd; }

/* Color 2: Green */
AgentTab.agent-color-2 { border-left: thick #4caf50; }
AgentTab.agent-color-2.active { border-left: thick #4caf50; background: #e8f5e9; }

/* Color 3: Purple */
AgentTab.agent-color-3 { border-left: thick #9c27b0; }
AgentTab.agent-color-3.active { border-left: thick #9c27b0; background: #f3e5f5; }

/* Color 4: Orange */
AgentTab.agent-color-4 { border-left: thick #ff9800; }
AgentTab.agent-color-4.active { border-left: thick #ff9800; background: #fff3e0; }

/* Color 5: Cyan */
AgentTab.agent-color-5 { border-left: thick #00bcd4; }
AgentTab.agent-color-5.active { border-left: thick #00bcd4; background: #e0f7fa; }

/* Color 6: Pink */
AgentTab.agent-color-6 { border-left: thick #e91e63; }
AgentTab.agent-color-6.active { border-left: thick #e91e63; background: #fce4ec; }

/* Color 7: Amber */
AgentTab.agent-color-7 { border-left: thick #ffc107; }
AgentTab.agent-color-7.active { border-left: thick #ffc107; background: #fff8e1; }

/* Color 8: Red */
AgentTab.agent-color-8 { border-left: thick #f44336; }
AgentTab.agent-color-8.active { border-left: thick #f44336; background: #ffebee; }

/* Tab status colors */
AgentTab.status-waiting {
    border: solid #999999;
}

AgentTab.status-working {
    border: solid #2196f3;
}

AgentTab.status-streaming {
    border: solid #4caf50;
}

AgentTab.status-completed {
    border: solid #4caf50;
}

AgentTab.status-error {
    border: solid #f44336;
}

/* Active tab with status */
AgentTab.active.status-working {
    background: #2196f3;
}

AgentTab.active.status-streaming {
    background: #4caf50;
}

AgentTab.active.status-completed {
    background: #4caf50;
}

AgentTab.active.status-error {
    background: #f44336;
}

/* Winner tab styling */
AgentTab.winner {
    background: #fff3cd;
    border: solid #ffc107;
    color: #856404;
    text-style: bold;
}

AgentTab.winner.active {
    background: #ffe699;
    border: solid #ffc107;
    border-bottom: tall #ffc107;
}

/* Consensus reached animation on StatusBar */
StatusBar.consensus-reached {
    background: #fff3cd;
    border-top: solid #ffc107;
}

/* Orchestrator events modal */
#orchestrator_modal_container {
    background: #ffffff;
    border: thick #0066cc;
    padding: 2;
    width: 80%;
    height: 80%;
}

#orchestrator_modal_header {
    color: #333333;
    text-style: bold;
    margin-bottom: 1;
}

#orchestrator_hint {
    color: #666666;
    text-style: italic;
    margin-bottom: 1;
}

#orchestrator_events_content {
    background: #fafafa;
    color: #333333;
}

/* Agent panels - now full width, one at a time */
AgentPanel {
    background: #f9f9f9;
    border-left: solid #dddddd;
    border-top: solid #dddddd;
    border-bottom: solid #dddddd;
    border-right: none;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;  /* Disable scrolling on AgentPanel - scrolling happens in TimelineScrollContainer */
}

/* Vertical container inside AgentPanel - full width, full height */
AgentPanel > Vertical {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    overflow: hidden;  /* Scrolling happens in TimelineScrollContainer, not here */
}

/* Agent panel header label - first line with agent name, backend, timer */
AgentPanel > Vertical > Label:first-of-type {
    padding-left: 2;
}

AgentPanel.hidden {
    display: none;
}

AgentPanel:hover {
    border-left: solid #bbbbbb;
    border-top: solid #bbbbbb;
    border-bottom: solid #bbbbbb;
    border-right: none;
}

/* Override Textual's default purple focus outline */
AgentPanel:focus,
AgentPanel:focus-within {
    border-left: solid #2196f3;
    border-top: solid #2196f3;
    border-bottom: solid #2196f3;
    border-right: none;
    background: #f5f9ff;
    outline: none;
}

AgentPanel.status-waiting {
    border-left: solid #dddddd;
    border-top: solid #dddddd;
    border-bottom: solid #dddddd;
    border-right: none;
}

AgentPanel.status-working {
    border-left: solid #2196f3;
    border-top: solid #2196f3;
    border-bottom: solid #2196f3;
    border-right: none;
    background: #f5f9ff;
}

AgentPanel.status-streaming {
    border-left: solid #4caf50;
    border-top: solid #4caf50;
    border-bottom: solid #4caf50;
    border-right: none;
    background: #f5fff5;
}

AgentPanel.status-completed {
    border-left: solid #4caf50;
    border-top: solid #4caf50;
    border-bottom: solid #4caf50;
    border-right: none;
}

AgentPanel.status-error {
    border-left: solid #f44336;
    border-top: solid #f44336;
    border-bottom: solid #f44336;
    border-right: none;
    background: #fff5f5;
}

/* === Agent Panel Color Palette - Match tab colors === */
AgentPanel.agent-color-1 { border-left: thick #2196f3; border-right: none; }
AgentPanel.agent-color-2 { border-left: thick #4caf50; border-right: none; }
AgentPanel.agent-color-3 { border-left: thick #9c27b0; border-right: none; }
AgentPanel.agent-color-4 { border-left: thick #ff9800; border-right: none; }
AgentPanel.agent-color-5 { border-left: thick #00bcd4; border-right: none; }
AgentPanel.agent-color-6 { border-left: thick #e91e63; border-right: none; }
AgentPanel.agent-color-7 { border-left: thick #ffc107; border-right: none; }
AgentPanel.agent-color-8 { border-left: thick #f44336; border-right: none; }

/* Loading indicator - centered in panel */
.loading-container {
    width: 100%;
    height: 100%;
    min-height: 5;
    align: center middle;
    content-align: center middle;
    background: #f5f5f5;
}

.loading-container.hidden {
    display: none;
}

.loading-container ProgressIndicator {
    text-align: center;
    color: #0066cc;
    text-style: bold;
    width: 100%;
    height: auto;
    content-align: center middle;
}

.loading-text {
    text-align: center;
    color: #666666;
    text-style: italic;
}

/* Context label - shows which answers an agent has in context */
.context-label {
    height: 1;
    width: 100%;
    padding: 0 1 0 3;
    background: #f0f4f8;
    color: #0a7d0a;
    text-style: italic;
}

.context-label.hidden {
    display: none;
}

/* Compact Header - Shows question and turn info */
/* HeaderWidget - hidden for now */
HeaderWidget {
    display: none;
}

HeaderWidget.hidden {
    display: none;
}

/* Note: HeaderWidget styling is handled by the class selector above.
   The #header_widget ID selector was removed to avoid CSS conflicts. */

/* Input area container - docks to bottom */
#input_area {
    dock: bottom;
    height: auto;
    min-height: 4;
    width: 100%;
    padding: 0 1;
    margin-bottom: 1;
    background: #f5f5f5;
}

/* During execution - show status in input bar, hide actual input */
#input_area.execution-mode {
    height: 3;
    min-height: 3;
    margin-bottom: 1;
}

#input_area.execution-mode #question_input {
    display: none;
}

#input_area.execution-mode #input_header {
    display: none;
}

/* Execution bar - shown during coordination, hidden otherwise */
#execution_bar {
    display: none;
    layout: horizontal;
    height: 3;
    width: 100%;
    padding: 0 2;
    background: #e8e8e8;
    border: solid #d32f2f;
    align-vertical: middle;
}

#input_area.execution-mode #execution_bar {
    display: block;
    layout: horizontal;
    height: 3;
    align-vertical: middle;
}

#execution_status {
    height: 1;
    width: auto;
    padding: 0 2;
    color: #666666;
    content-align: left middle;
    background: #e8e8e8;
    margin-left: 1;
}

#execution_spacer {
    width: 1fr;
}

#cancel_button {
    width: auto;
    min-width: 10;
    height: 1;
    background: #d32f2f;
    color: #ffffff;
    border: none;
    padding: 0 2;
    text-style: bold;
}

#cancel_button:hover {
    background: #f44336;
    color: #ffffff;
}

#cancel_button:focus {
    background: #f44336;
    border: none;
}

/* During execution, hide hint and input but keep header */
#input_area.execution-mode #input_hint {
    display: none;
}

#input_area.execution-mode #vim_indicator {
    display: none;
}

#input_area.execution-mode #input_header {
    display: none;
}

/* === Path Autocomplete Dropdown === */
#path_dropdown {
    display: none;
    layer: overlay;
    width: 100%;
    height: auto;
    max-height: 14;
    background: #ffffff;
    border: solid #0066cc;
    padding: 0;
    margin-bottom: 1;
    layout: vertical;
}

#path_dropdown.visible {
    display: block;
}

#path_dropdown > #suggestions_container {
    height: auto;
    max-height: 11;
    overflow-y: auto;
}

#path_dropdown > .hint-bar {
    dock: bottom;
    height: 1;
    width: 100%;
    background: #f0f0f0;
    color: #666666;
    text-align: center;
    padding: 0 1;
    border-top: solid #e0e0e0;
}

/* Path suggestion rows */
SuggestionRow {
    height: 1;
    padding: 0 1;
    background: transparent;
}

SuggestionRow:hover {
    background: #e8e8e8;
}

SuggestionRow.selected {
    background: #0066cc;
    color: #ffffff;
}

/* Question input - multi-line TextArea */
#question_input {
    background: #ffffff;
    border: solid #0066cc;
    height: auto;
    min-height: 1;
    max-height: 10;
    margin-left: 1;
}

#question_input:focus {
    border: double #0066cc;
}

/* Hide line numbers in the question input */
#question_input .text-area--line-number-gutter {
    display: none;
}

/* Input header - contains hint, vim indicator, and cancel button */
#input_header {
    layout: horizontal;
    height: 1;
    width: 100%;
    margin-bottom: 0;
}

/* Input hint text */
#input_hint {
    height: 1;
    width: 1fr;
    color: #6e7681;
    text-style: italic;
    padding: 0 1;
    margin-left: 1;
}

/* Vim mode indicator - hidden by default */
#vim_indicator {
    display: none;
    height: 1;
    width: auto;
    min-width: 10;
}

/* Vim mode indicator - shown when active (use !important to override display: none) */
#input_header #vim_indicator.vim-normal-indicator {
    display: block !important;
    height: 1;
    width: 10;
    padding: 0 1;
    text-style: bold;
    content-align: center middle;
    background: #d29922;
    color: #1a1a1a;
}

#input_header #vim_indicator.vim-insert-indicator {
    display: block !important;
    height: 1;
    width: 10;
    padding: 0 1;
    text-style: bold;
    content-align: center middle;
    background: #238636;
    color: #ffffff;
}

/* Vim normal mode - input border */
#question_input.vim-normal {
    border: solid #d29922;
}

#question_input.vim-normal:focus {
    border: solid #d29922;
}

#restart_banner {
    background: #ff9800;
    color: #ffffff;
    padding: 1;
    margin-top: 1;
}

#restart_context {
    background: #2196f3;
    color: #ffffff;
    padding: 1;
}

/* Agent headers */
Label {
    height: auto;
    width: 100%;
}

RichLog {
    background: #ffffff;
    color: #333333;
    scrollbar-size: 2 2;
}

/* Status colors */
.waiting {
    color: #9e9e9e;
}

.working {
    color: #2196f3;
}

.streaming {
    color: #4caf50;
}

.completed {
    color: #4caf50;
}

.error {
    color: #f44336;
}

/* Content type colors */
.tool {
    color: #03a9f4;
}

.status {
    color: #ff9800;
}

.thinking {
    color: #333333;
}

.injection {
    color: #7c3aed;
    background: #ede9fe;
    padding: 0 1;
    margin: 1 0;
}

.reminder {
    color: #d97706;
    background: #fef3c7;
    padding: 0 1;
    margin: 1 0;
}

.presentation {
    color: #9c27b0;
}

/* Streaming label */
.streaming_label {
    color: #4caf50;
    text-style: italic bold;
    height: 1;
    width: 100%;
    background: #f0fff0;
    border-left: tall #4caf50;
    padding-left: 1;
}

/* Post-evaluation panel */
#post_eval_container {
    background: #f9f9f9;
    border: solid #dddddd;
    margin: 0 1 1 1;
    padding: 1;
    width: 100%;
}

#post_eval_label {
    color: #0066cc;
    margin-bottom: 1;
}

/* Final stream panel */
#final_stream_container {
    background: #fffbf0;
    border: solid #ff9800;
    margin: 0 1 1 1;
    padding: 1;
    width: 100%;
}

#final_stream_container.streaming-active {
    border: double #ff9800;
}

#final_stream_label {
    color: #e65100;
    text-style: bold;
    margin-bottom: 1;
}

#final_stream_log {
    background: #ffffff;
    color: #333333;
}

#final_stream_log,
#post_eval_log {
    scrollbar-size: 2 2;
}

/* Modals */
ModalScreen {
    align: center middle;
}

/* === Tool Detail Modal === */
ToolDetailModal {
    align: center middle;
}

ToolDetailModal > Container {
    width: 80%;
    max-width: 120;
    height: auto;
    max-height: 80%;
    background: #ffffff;
    border: thick #0066cc;
    padding: 1 2;
}

ToolDetailModal .modal-header {
    height: 3;
    width: 100%;
    padding: 0 1;
    layout: horizontal;
}

ToolDetailModal .modal-title {
    width: 1fr;
    text-style: bold;
    color: #333333;
}

ToolDetailModal .modal-close {
    dock: right;
    width: 5;
    min-width: 5;
    height: 3;
    content-align: center middle;
    text-align: center;
    background: #cccccc;
}

ToolDetailModal .modal-close:hover {
    background: #e74c3c;
    color: #ffffff;
}

ToolDetailModal .modal-divider {
    height: 1;
    width: 100%;
    color: #cccccc;
}

ToolDetailModal .modal-section-title {
    height: 1;
    margin-top: 1;
    text-style: bold;
    color: #0066cc;
}

ToolDetailModal .modal-content {
    height: auto;
    max-height: 15;
    padding: 0 1;
    margin-top: 1;
    background: #f9f9f9;
    border: solid #cccccc;
    overflow-y: auto;
}

ToolDetailModal .args-content {
    color: #666666;
    padding: 1;
}

ToolDetailModal .result-content {
    color: #333333;
    padding: 1;
}

ToolDetailModal .error-content {
    color: #e74c3c;
    padding: 1;
}

ToolDetailModal .modal-footer {
    height: 3;
    width: 100%;
    align: center middle;
    margin-top: 1;
}

ToolDetailModal .close-button {
    width: auto;
    min-width: 18;
    content-align: center middle;
    text-align: center;
}

