/* Multi-line text area */
.text-area-input {
    height: 10;
    background: #ffffff;
    border: solid #e0e0e0;
}

.text-area-input:focus {
    border: solid #0066cc;
}

/* Model select styling */
.model-select-container {
    padding: 1 2;
}

.model-select-label {
    color: #333333;
    margin-bottom: 1;
}

.model-search {
    height: 3;
    background: #ffffff;
    border: solid #e0e0e0;
    margin-bottom: 1;
}

.model-search:focus {
    border: solid #0066cc;
}

.model-list {
    height: auto;
    max-height: 15;
    background: #ffffff;
    border: solid #e0e0e0;
    padding: 0;
}

.model-item {
    height: 2;
    padding: 0 1;
    background: transparent;
}

.model-item:hover {
    background: #f5f5f5;
}

.model-item.selected {
    background: #e8f5e9;
    color: #2e7d32;
}

/* Preview step styling */
.preview-container {
    height: 1fr;
    padding: 1;
}

.preview-header {
    color: #0066cc;
    text-style: bold;
    margin-bottom: 1;
}

.preview-content {
    height: 1fr;
    background: #fafafa;
    border: solid #e0e0e0;
    padding: 1;
    color: #333333;
}

/* Complete step styling */
.complete-container {
    align: center middle;
    text-align: center;
}

.complete-icon {
    color: #2e7d32;
    margin-bottom: 1;
}

.complete-title {
    color: #2e7d32;
    text-style: bold;
    margin-bottom: 1;
}

.complete-message {
    color: #666666;
    margin-bottom: 2;
}

.complete-next-steps {
    color: #0077b6;
    margin-top: 1;
}

/* === CLI-Style Wizard Status Classes === */

/* Status indicators */
.wizard-status-ok {
    color: #2e7d32;
    width: 100%;
}

.wizard-status-error {
    color: #c62828;
    width: 100%;
}

.wizard-status-warning {
    color: #f57f17;
    width: 100%;
}

.wizard-status-muted {
    color: #757575;
    width: 100%;
}

/* Section titles - teal/cyan, bold */
.wizard-section-title {
    color: #0077b6;
    text-style: bold;
    width: 100%;
    margin-top: 1;
    margin-bottom: 0;
}

/* Status items - 2 space indent */
.wizard-status-item {
    padding-left: 2;
    width: 100%;
}

/* Description text - 6 space indent, muted */
.wizard-description {
    padding-left: 6;
    color: #757575;
    width: 100%;
}

/* ============================================================================
 * Modern Wizard Framework Styling (Light Theme)
 * Card-based wizard with ASCII banner, breadcrumb stepper, and status indicators
 * ============================================================================ */

/* --- ASCII Banner --- */
ASCIIBanner {
    width: 100%;
    height: auto;
    content-align: center middle;
    text-align: center;
    padding: 0 0 1 0;
}

ASCIIBanner .banner-text {
    color: #0077b6;
    text-style: bold;
}

ASCIIBanner .banner-subtitle {
    color: #757575;
    text-align: center;
    margin-top: 0;
}

/* --- Breadcrumb Stepper --- */
BreadcrumbStepper {
    width: 100%;
    height: auto;
    content-align: center middle;
    padding: 1 2;
}

BreadcrumbStepper .stepper-track {
    width: auto;
    height: 1;
    content-align: center middle;
}

BreadcrumbStepper .stepper-labels {
    width: auto;
    height: 1;
    content-align: center middle;
}

BreadcrumbStepper .step-indicator {
    width: auto;
    height: 1;
}

BreadcrumbStepper .step-indicator.completed {
    color: #2e7d32;
}

BreadcrumbStepper .step-indicator.current {
    color: #0077b6;
    text-style: bold;
}

BreadcrumbStepper .step-indicator.pending {
    color: #bdbdbd;
}

BreadcrumbStepper .step-connector {
    color: #bdbdbd;
    width: auto;
}

BreadcrumbStepper .step-connector.completed {
    color: #2e7d32;
}

BreadcrumbStepper .step-label {
    width: auto;
    text-align: center;
    padding: 0 1;
}

BreadcrumbStepper .step-label.current {
    color: #0077b6;
    text-style: bold;
}

BreadcrumbStepper .step-label.completed {
    color: #2e7d32;
}

BreadcrumbStepper .step-label.pending {
    color: #bdbdbd;
}

/* --- Status Indicator --- */
StatusIndicator {
    width: auto;
    height: 1;
}

StatusIndicator.pending {
    color: #bdbdbd;
}

StatusIndicator.loading {
    color: #0077b6;
}

StatusIndicator.success {
    color: #2e7d32;
}

StatusIndicator.error {
    color: #c62828;
}

StatusIndicator.warning {
    color: #f57f17;
}

/* --- Status Row --- */
StatusRow {
    width: 100%;
    height: auto;
    padding: 0 1;
}

StatusRow .status-label {
    width: 1fr;
}

StatusRow .status-detail {
    width: auto;
    color: #757575;
}

/* --- Wizard Modal Container --- */
WizardModal {
    align: center middle;
    background: #ffffff 80%;
}

WizardModal #wizard_outer {
    width: 90%;
    max-width: 80;
    height: 90%;
    background: #fafafa;
    border: double #0077b6;
    padding: 1 2;
}

WizardModal #wizard_banner {
    width: 100%;
    height: auto;
    content-align: center middle;
    padding: 0;
}

WizardModal #wizard_banner .banner-text {
    color: #0077b6;
    text-align: center;
}

WizardModal #wizard_stepper {
    width: 100%;
    height: auto;
    content-align: center middle;
    padding: 1 0;
}

WizardModal #wizard_card {
    width: 100%;
    height: 1fr;
    min-height: 12;
    margin: 0 1;
}

WizardModal #wizard_card .card-border-top,
WizardModal #wizard_card .card-border-bottom {
    color: #e0e0e0;
    text-align: center;
}

WizardModal #wizard_card .card-content {
    padding: 2 3;
    height: 1fr;
    overflow-y: auto;
}

WizardModal #wizard_title {
    text-style: bold;
    color: #212121;
    text-align: center;
    width: 100%;
    margin-bottom: 1;
}

WizardModal #wizard_description {
    color: #757575;
    text-align: center;
    width: 100%;
    margin-bottom: 2;
}

WizardModal #wizard_step_content {
    width: 100%;
    height: auto;
    min-height: 6;
}

WizardModal #wizard_error {
    color: #c62828;
    background: #ffebee;
    text-align: center;
    width: 100%;
    height: auto;
    padding: 1;
    margin: 1 0;
    border: solid #c62828;
}

WizardModal #wizard_error.hidden {
    display: none;
}

WizardModal #wizard_nav {
    height: 3;
    width: 100%;
    align: center middle;
    padding: 1 0;
}

WizardModal #wizard_nav Button {
    margin: 0 2;
    min-width: 14;
}

WizardModal #wizard_back {
    background: #f5f5f5;
    color: #212121;
}

WizardModal #wizard_back:hover {
    background: #e0e0e0;
}

WizardModal #wizard_back.disabled {
    background: #fafafa;
    color: #bdbdbd;
}

WizardModal #wizard_next {
    background: #4caf50;
    color: #ffffff;
    text-style: bold;
}

WizardModal #wizard_next:hover {
    background: #43a047;
}

WizardModal #wizard_cancel {
    background: #f5f5f5;
    color: #757575;
}

WizardModal #wizard_cancel:hover {
    background: #f44336;
    color: #ffffff;
}

WizardModal #wizard_hints {
    width: 100%;
    height: 1;
    color: #bdbdbd;
    text-align: center;
    padding: 0 2;
}

/* --- Section Titles (used in step components) --- */
.section-title {
    color: #0077b6;
    text-style: bold;
    width: 100%;
    margin-top: 1;
    margin-bottom: 1;
}

/* --- Success/Error Messages --- */
.success-message {
    color: #2e7d32;
    text-align: center;
    padding: 1;
}

.error-message {
    color: #c62828;
    padding: 1;
}
