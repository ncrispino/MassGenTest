}

#tree_label {
    color: #0066cc;
    margin-bottom: 1;
}

#workspace_tree {
    height: 1fr;
    background: #ffffff;
}

#file_preview_panel {
    width: 65%;
    padding-left: 1;
}

#preview_label {
    color: #0066cc;
    margin-bottom: 1;
}

#file_preview {
    background: #ffffff;
    color: #000000;
    height: 1fr;
}

#file_inspection_buttons {
    margin-top: 1;
}

#file_inspection_buttons Button {
    margin-right: 1;
}

/* === Agent Output Modal === */
