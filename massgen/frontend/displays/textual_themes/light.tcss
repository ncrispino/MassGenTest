}

/* Broadcast Prompt Modal */
#broadcast_container {
    background: #f3f3f3;
    border: thick #d32f2f;
    padding: 2;
    width: 80%;
    height: auto;
    max-height: 80%;
}

#broadcast_banner {
    color: #ffffff;
    background: #d32f2f;
    text-style: bold;
    text-align: center;
    padding: 1;
    margin-bottom: 1;
}

#broadcast_sender {
    color: #0066cc;
