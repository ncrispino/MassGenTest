    padding: 2;
    width: 90%;
    height: 70%;
}

#cost_header {
    color: #16825d;
    text-style: bold;
    margin-bottom: 1;
}

#cost_content {
    background: #ffffff;
    color: #000000;
}

/* Workspace Files Modal */
#workspace_container {
    background: #f3f3f3;
    border: thick #0066cc;
    padding: 2;
    width: 80%;
    height: 70%;
}

#workspace_header {
    color: #0066cc;
    text-style: bold;
    margin-bottom: 1;
}

#workspace_content {
    background: #ffffff;
    color: #000000;
