    margin-bottom: 1;
}

#agent_output_text {
    height: 1fr;
    background: #ffffff;
    color: #333333;
    border: solid #cccccc;
    padding: 1;
}

#agent_output_buttons {
    margin-top: 1;
}

#agent_output_buttons Button {
    margin-right: 1;
}

/* === Keyboard Shortcuts Modal === */
#shortcuts_modal_container {
    width: 55;
    height: auto;
    background: #f5f5f5;
    border: solid #2196f3;
